{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/microservice-with-nestjs-monorepo-architecture/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/microservice-with-nestjs-monorepo-architecture/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/microservice-with-nestjs-monorepo-architecture",
  "projects": {
    "microservice-with-nestjs-monorepo-architecture": {
      "type": "application",
      "root": "apps/microservice-with-nestjs-monorepo-architecture",
      "entryFile": "main",
      "sourceRoot": "apps/microservice-with-nestjs-monorepo-architecture/src",
      "compilerOptions": {
        "tsConfigPath": "apps/microservice-with-nestjs-monorepo-architecture/tsconfig.app.json"
      }
    },
    "http-api-gateway": {
      "type": "application",
      "root": "apps/http-api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/http-api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/http-api-gateway/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}